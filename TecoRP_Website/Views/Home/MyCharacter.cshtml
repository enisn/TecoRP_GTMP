@model TecoRP.Models.User
@{
    ViewBag.Title = "MyCharacter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}









<div class="demo-cards mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-grid mdl-grid--no-spacing">
    <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
        <div style="background-image:url(/Content/images/bg_karakter.png); background-position: 100% 100%; min-height:420px;" class="mdl-card__title mdl-card--expand mdl-color--teal-300">
            <h2 class="mdl-card__title-text">@Model.CharacterName</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
          <center>
              <b>Para: </b> @Model.Money $ <br />
              <b>Banka: </b> @Model.BankMoney $  <br />
               <b>Toplam: </b> @(Model.BankMoney+Model.Money) $  <br />

            <b>Memleket: </b> @Model.Origin  <br />
               <b>Yaş: </b> @Model.GetAge() <br />
              <b>Oluşum: </b> @Model.GetFaction() <br />
              <b>Meslek: </b> @Model.GetJob() <br />
              <b>Aranma Seviyesi: </b> @for (int i = 0; i < Model.WantedLevel; i++){<text>*</text>}
              <br />
            <b>Seviye: </b> @Model.Level<br />
               <b>Dakika: </b> @Model.PastBankMinutes dk <br />
              </center>
        </div>
    </div>
    <div class="demo-separator mdl-cell--1-col"></div>
</div>