@model TecoRP_Website.Models.AspNetUsers

@{
    ViewBag.Title = "Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal" style="width:100%">       


        <div class="demo-cards mdl-cell mdl-cell--8-col mdl-cell--8-col-tablet mdl-grid mdl-grid--no-spacing ">
            <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--12-col-desktop">
                <div style="background-image:url(/Content/images/socialclub.png);" class="mdl-card__title mdl-card--expand mdl-color--grey-900">
            
                </div>
                <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                    <p>Oyuna bağlandığınız <b>Social Club</b> hesabınızı giriniz:</p>
                    @Html.EditorFor(model => model.SocialClubName, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <input type="submit" value="KAYDET" class="mdl-button mdl-js-button mdl-js-ripple-effect" />
                </div>
            </div>
            <div class="demo-separator mdl-cell--1-col"></div>

        </div>
</div>
}
