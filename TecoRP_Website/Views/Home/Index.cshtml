@model TecoRP_Website.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}


@if (Model.ConfigurationEnabled)
{
<div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-grid mdl-grid--no-spacing">
    <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
        <div style="background-image:url(/Content/images/konfigurasyon.png);" class="mdl-card__title mdl-card--expand mdl-color--red-900">
            <h2 class="mdl-card__title-text">Konfigürasyon</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            Oyun içerisindeki karakterinizin bilgilerini görebilmek için konfigürasyon yapmanız gerekmektedir. <br />
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@Url.Action("Configuration","Home")" class="mdl-button mdl-js-button mdl-js-ripple-effect" data-upgraded=",MaterialButton,MaterialRipple">
                YAP
                <span class="mdl-button__ripple-container"><span class="mdl-ripple"></span></span>
            </a>
        </div>
    </div>
    <div class="demo-separator mdl-cell--1-col"></div>
</div>

}

<div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-grid mdl-grid--no-spacing">
    <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
        <div style="background-image:url(/Content/images/basvuru.png);" class="mdl-card__title mdl-card--expand mdl-color--yellow-A200">
            <h2 class="mdl-card__title-text mdlco mdl-color-text--grey-900">Başvuru</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            Oyuna dahil olabilmek için buradan karakter başvurusu yapmanız gerekmektedir. <br />
            <b>Aktif Social Club Hesabı: </b> @Model.OwnerSocialClubName
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@Url.Action("Index","Applications")" class="mdl-button mdl-js-button mdl-js-ripple-effect" data-upgraded=",MaterialButton,MaterialRipple">
                BAŞVURU
                <span class="mdl-button__ripple-container"><span class="mdl-ripple"></span></span>
            </a>
        </div>
    </div>
    <div class="demo-separator mdl-cell--1-col"></div>
</div>
<div class="demo-cards mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-grid mdl-grid--no-spacing">
    <div class="demo-updates mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
        <div style="background-image:url(/Content/images/karakterim.png);" class="mdl-card__title mdl-card--expand mdl-color--teal-300">
            <h2 class="mdl-card__title-text">Karakterim</h2>
        </div>
        <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            Karakterinizin genel bilgileri <br />
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect" data-upgraded=",MaterialButton,MaterialRipple">
                İNCELE
                <span class="mdl-button__ripple-container"><span class="mdl-ripple"></span></span>
            </a>
        </div>
    </div>
    <div class="demo-separator mdl-cell--1-col"></div>
</div>







